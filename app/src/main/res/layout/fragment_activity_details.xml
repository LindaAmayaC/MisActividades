<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/topbarheight"
            android:background="@drawable/stylegradienttopscreen">
            <ImageButton
                android:id="@+id/ibButtonReturnFragmentActivitydetails"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_return"
                android:background="@color/transparent"/>

        </LinearLayout>
        <ScrollView
            android:layout_marginTop="110dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="6dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/colorCard">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvDetailsActivityname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nombre de la Actividad"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textSize="@dimen/title"
                            android:textAlignment="center"
                            android:padding="35dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Descripción"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textSize="@dimen/description"
                            android:textAlignment="center"
                            android:padding="35dp"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingBottom="10dp"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="40dp">

                            <TextView
                                android:id="@+id/tvDetailsActivitydescription"
                                android:layout_width="match_parent"
                                android:layout_height="261dp"
                                android:layout_paddingBottom="30dp"
                                android:background="@color/white"
                                android:fontFamily="sans-serif"
                                android:padding="35dp"
                                android:text="Descripción"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/description" />

                        </androidx.cardview.widget.CardView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>